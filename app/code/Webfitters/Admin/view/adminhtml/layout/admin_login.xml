<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-login" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_image_src" xsi:type="string">Webfitters_Admin::images/logo.png</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="copyright" remove="true" />
        <referenceBlock name="login.footer">
            <block class="Magento\Framework\View\Element\Template" template="Webfitters_Admin::help.phtml" after="-" />
        </referenceBlock>
    </body>
</page>
