<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="webfitters" translate="label" sortOrder="500">
            <label>Webfitters</label>
        </tab>
        <section id="social" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Social Media</label>
            <tab>webfitters</tab>
            <resource>Webfitters_SocialMedia::config</resource>
            <group id="facebook" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Facebook Configuration</label>
                <field id="app_id" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Facebook App ID</label>
                    <comment>Enter your Facebook's App ID.</comment>
                </field>
                <field id="app_secret" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Facebook App Secret</label>
                    <comment>Enter your Facebook's App Secret.</comment>
                </field>
                <field id="access_key" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Facebook Access Key</label>
                    <comment>Enter your Facebook Access Key.</comment>
                </field>
            </group>
        </section>
    </system>
</config>